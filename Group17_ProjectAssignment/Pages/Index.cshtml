@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4">Add Stuff</h1>

</div>



<div>
    <table class="table table-active">
        <thead>
            <tr>
                <th>
                    Total Ammount Of Stock Held
                </th>
                <th>
                    Average Purchase Price
                </th>
                <th>
                    Average Sale Price
                </th>
                <th>
                    Average Profit
                </th>

            </tr>
        </thead>



        <tr>
            <td>@Model.AmtProduct</td>
            <td>@Model.AvgPurchasePrice</td>
            <td>@Model.AvgSalePrice</td>
            <td>@Model.AvgProfit</td>
        </tr>

    </table>
    </div>
<div>
    <table class="table table-active">
        <thead>
            <tr>
                <th>
                    Highest selling products
                </th>
            </tr>
        </thead>
        <tr>
            @for (int i = 0; i<Model.TopProduct.Count;i++) {
            <td>@Model.TopProduct[i].SalePrice</td>
            }
        </tr>
    </table>
</div>
